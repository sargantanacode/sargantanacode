<% content_for :title, t('.edit_account', user: resource) %>

<h2><%= t('.edit_account', user: resource) %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('.waiting_confirmation', email: resource.unconfirmed_email) %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(<%= t('.change_password') %>)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= t('.password_characters', length: @minimum_password_length) %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autocomplete: "name" %>
  </div>

    <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_area :bio, autocomplete: "bio" %>
  </div>

  <div class="field">
    <%= f.label :github %><br />
    <%= f.text_field :github, autocomplete: "github" %>
  </div>

  <div class="field">
    <%= f.label :linkedin %><br />
    <%= f.text_field :linkedin, autocomplete: "linkedin" %>
  </div>

  <div class="field">
    <%= f.label :twitter %><br />
    <%= f.text_field :twitter, autocomplete: "twitter" %>
  </div>

  <div class="field">
    <%= f.label :facebook %><br />
    <%= f.text_field :facebook, autocomplete: "facebook" %>
  </div>
  
  <% if current_user.admin? %>
    <div class="field">
      <%= f.label :job_l %><br />
      <%= f.select :job, options_for_select(f.object.class.translated_jobs.map {
          |translation, k, _v| [translation, k]
        }, selected: resource.job) %>
    </div>

    <div class="field">
      <%= f.label :role_l %><br />
      <%= f.select :role, options_for_select(f.object.class.translated_roles.map {
          |translation, k, _v| [translation, k]
        }, selected: resource.role) %>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :current_password %> <i>(<%= t('.current_password') %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit t('.update') %>
  </div>
<% end %>

<h3><%= t('.cancel_account') %></h3>

<p><%= t('.cancel_account_message') %></p>

<%= button_to t('.cancel_account'), registration_path(resource_name), 
    data: { confirm: t('.cancel_account_confirm') }, method: :delete %>

<%= link_to t('.back'), :back %>
