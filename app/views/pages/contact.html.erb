<% content_for :title, t('.contact_form') %>

<div class="col-11 col-sm-9 col-lg-7 col-xl-6 content mb-4 mx-auto">
  <h2 class="post-title text-center mb-4"><%= t('.contact_form') %></h2>
  <%= form_for @contact, url: contact_new_path do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, :class => "form-control", :required => true %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, :class => "form-control", :required => true %>
    </div>
    <div class="form-group">
      <%= f.label :subject %>
      <%= f.text_field :subject, :class => "form-control", :required => true %>
    </div>
    <div class="form-group">
      <%= f.label :message %>
      <%= f.text_area :message, :class => "form-control", :rows => 8, :required => true %>
    </div>
    <div class="form-group hidden">
      <%= f.text_field :nickname %>
    </div>

    <div class="actions">
      <%= f.submit t('.send'), :class=> "btn btn-primary" %>
    </div>
  <% end %>
</div>
