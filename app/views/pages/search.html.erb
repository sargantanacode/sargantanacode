<% content_for :title, t('.search') %>

<% if params[:term] != nil && @posts && @posts.empty? %>
  <% content_for :notice, t('.term_not_found', term: params[:term]) %>
<% end %>

<div class="col-12 content mb-4">
  <h2 class="post-title text-center mb-4"><%= t('.search') %></h2>
  <p><%= t('.search_message') %></p>
  <%= form_tag(search_path, method: :get) do %>
    <div class="form-group my-0">
      <%= text_field_tag :term, params[:term], :class => "form-control", :placeholder => t('.search_placeholder') %>
    </div>
  <% end %>
</div>

<% unless @posts.nil? %>
  <%= render 'posts/list', posts: @posts %>
<% end %>
