<li>
  <div class="content comment mb-2" id="<%= "comment-#{comment.id}" %>">
    <div class="comment__avatar show-up-lg">
      <%= image_tag gravatar_url(comment.email, 90), :alt => comment.author %>
    </div>
    <div class="comment__content">
      <div class="comment__header">
        <% unless comment.url.blank? %>
          <a href="<%= comment.url %>"><h2><%= comment.author %></h2></a>
        <% else %>
          <h2><%= comment.author %></h2>
        <% end %>
        <small><%= comment.created_at.strftime('%d/%m/%Y %H:%M (%Z)') %></small>
      </div>
      <%= sanitize markdown comment.comment %>
      <div class="comment__reply">
        <a class="btn-sm btn-primary text-center reply-button" 
          id="<%= "#{comment.id}" %>">
            <i class="fa fa-reply" aria-hidden="true" data-toggle="tooltip"
              data-placement="top" title="<%= t('.reply') %>"></i>
        </a>
        <a class="btn-sm btn-danger text-center hidden"
          id="<%= "cancel-reply-#{comment.id}" %>">
            <i class="fa fa-remove" aria-hidden="true" data-toggle="tooltip"
              data-placement="top" title="<%= t('.cancel-reply') %>"></i>
        </a>
      </div>
    </div>
  </div>
</li>
