<% content_for :title, t('.edit_page') %>

<div class="col-10 mb-3">
  <h2 class="text-center h2 mb-4"><%= t('.edit_page') %></h2>
  <%= form_for @page, :url => admin_page_path do |f| %>
    <div class="content mb-5">
      <%= render 'form_header', page: @page, new_page: false %>
      <%= render 'form_es', f: f %>
    </div>
    <div class="content mb-5">
      <%= render 'form_en', f: f %>
    </div>
    <div class="content">
      <%= render 'form_common', f: f, new_page: false %>
    </div>
  <% end %>
</div>
