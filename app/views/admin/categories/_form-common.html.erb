<div class="form-group">
  <%= f.label :slug %>
  <%= f.text_field :slug, :class => "form-control" %>
  <small id="slugHelp" class="form-text text-muted"><%= t('.slug_help') %></small>
</div>

<div class="form-group">
  <%= f.label :image %>
  <%= f.file_field :image, :class => "form-control-file" %>
  <small id="imageHelp" class="form-text text-muted"><%= t('.image_help') %></small>
</div>

<div class="form-group">
  <%= f.label :cover_image %>
  <%= f.file_field :cover_image, :class => "form-control-file" %>
  <small id="coverImageHelp" class="form-text text-muted"><%= t('.cover_image_help') %></small>
</div>

<div class="actions">
  <%= f.submit t('.add'), :class => "btn btn-primary" %>
</div>
