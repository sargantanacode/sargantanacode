<% content_for :title, t('.edit_post') %>

<div class="col-10 mb-3">
  <h2 class="text-center h2 mb-4"><%= t('.edit_post') %></h2>
  <%= form_for @post, :url => admin_post_path do |f| %>
    <div class="content mb-5">
      <%= render 'form_header', post: @post, new_post: false %>
      <%= render 'form_es', f: f %>
    </div>
    <div class="content mb-5">
      <%= render 'form_en', f: f %>
    </div>
    <div class="content">
      <%= render 'form_common', f: f, new_post: false %>
    </div>
  <% end %>
</div>
