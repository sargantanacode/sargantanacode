<% content_for :title, t('.edit_post') if @post.type == 'post' %>
<% content_for :title, t('.edit_page') if @post.type == 'page' %>

<div class="col-10 mb-3">
  <h2 class="text-center h2 mb-4">
    <%= t('.edit_post') if @post.type == 'post' %>
    <%= t('.edit_page') if @post.type == 'page' %>
  </h2>
  <%= form_for @post, :url => admin_post_path do |f| %>
    <div class="content mb-5">
      <%= render 'form-header', post: @post, new_post: false %>
      <%= render 'form-es', f: f %>
    </div>
    <div class="content mb-5">
      <%= render 'form-en', f: f %>
    </div>
    <div class="content">
      <%= render 'form-common', f: f, post: @post %>
    </div>
  <% end %>
</div>
