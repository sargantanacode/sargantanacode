<% content_for :title, t('.publish_post') %>

<div class="col-10 mb-3">
  <h2 class="text-center h2 mb-4"><%= t('.publish_post') %></h2>
  <%= form_for [:admin, @post] do |f| %>
    <div class="content mb-5">
      <%= render 'form-header', post: @post, new_post: true %>
      <%= render 'form-es', f: f %>
    </div>
    <div class="content mb-5">
      <%= render 'form-en', f: f %>
    </div>
    <div class="content">
      <%= render 'form-common', f: f %>
    </div>
  <% end %>
</div>
