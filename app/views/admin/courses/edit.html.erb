<% content_for :title, t('.edit_course') %>

<div class="col-10 mb-3">
  <h2 class="text-center h2 mb-4"><%= t('.edit_course') %></h2>
  <%= form_for @course, :url => admin_course_path do |f| %>
    <div class="content mb-5">
      <%= render 'admin/categories/form-header', category: @course, new_item: false %>
      <%= render 'admin/categories/form-es', f: f %>
    </div>
    <div class="content mb-5">
      <%= render 'admin/categories/form-en', f: f %>
    </div>
    <div class="content">
      <%= render 'admin/categories/form-common', f: f %>
    </div>
  <% end %>
</div>
