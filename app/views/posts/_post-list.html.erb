<% posts.each do |post| %>
  <div class="col-md-6 mb-4">
    <div class="list">
      <%= link_to post_path(id: post.slug) do %>
        <span class="date-badge">
          <%= post.published_at.strftime('%d/%m/%Y') %>
        </span>
        <span class="category-badge">
          <%= post.category.name %>
        </span>
        <%= image_tag post_image(post), :alt => post.title, :class => "post-header" %>
        <div class="list__content">
          <h2 class="list__title"><%= post.title %></h2>
          <p class="list__text"><%= post.excerpt %></p>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<% if posts.total_pages > 1 %>
  <div class="pagination col-12 d-flex justify-content-center mt-5">
    <%= link_to_previous_page posts, t('.previous_page') %>
    <%= link_to_next_page posts, t('.next_page') %>
  </div>
<% end %>
